#:set login_screen_size 1280, 960
#:set widget_login_size 500, 50
#:set login_center_x login_screen_size[0] / 2 - (widget_login_size[0] / 2)
#:set login_center_y login_screen_size[1] / 2 - (250 / 2)

<Login>:
	name:'Login'
	
	FloatLayout:
		size_hint: None, None
		size: login_screen_size
		
		BoxLayout:
			size_hint: None, None
			pos: login_center_x, login_center_y
			spacing: 10
			orientation: 'vertical'
		
			Label:
				size_hint: None, None
				id:wrong_input
				text: ''
				size: widget_login_size
				font_size: 30
				italic: True
				color: 1,0,0,1
				
			LoginTextInput:
				id:input_login
			LoginTextInput:
				id:input_password
	
			BoxLayout:
				size_hint: None1, None
				size: widget_login_size
				
				StrokeButton:
					back_color: (0.157, 0.455, 0.753, 1.0)
					on_press:
						root.submit_login(input_login.text, input_password.text)
					
				SmoothButton:
					back_color: (0.157, 0.455, 0.753, 1.0)
					on_press:
						root.focus: False
						root.clean()
					
			RoundedButton
				on_press:
					root.register()	
		
<LoginButton@Button>:
	font_size: 16
	size_hint: None, None
	size: 250, widget_login_size[1]

<LoginTextInput@TextInput>:
	size_hint: None, None
	size: widget_login_size
	write_tab: False
	multiline: False
	text: '1'
	on_focus:
		self.parent.parent.parent.check_data(self)			
			
<RoundedButton@ButtonBehavior+Label>:
	text: 'Cadastre-se'
	size_hint: None, None
	size: widget_login_size

	canvas.before:
		Color:
			rgba: 1, 0.3, .7, 1
		Ellipse:
			pos: self.pos
			size:self.height, self.height
		Ellipse:
			pos: self.x + self.width - self.height, self.y
			size:self.height, self.height
		Rectangle:
			pos: self.x + self.height /2.0, self.y
			size:self.width - self.height, self.height
		
<SmoothButton@Button>:
	font_size: 16
	text: 'Limpar'
	size_hint: None, None
	size: 250, widget_login_size[1]
	background_color: (0, 0, 0, 0)
	background_normal: ''
	back_color: (1,0,1,1)
	border_radius: [18]
	canvas.before:
		Color:
			rgba: self.back_color
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: self.border_radius
			
	
		
<StrokeButton@Button>:
	font_size: 16
	text: 'Prosseguir'
	size_hint: None, None
	size: 250, widget_login_size[1]
	background_color: (0, 0, 0, 0)
	background_normal: ''
	back_color: (1,1,1,1)
	border_radius: 18
	color: self.back_color

	bold: True
	canvas.before:
		Color:
			rgba: self.back_color
		Line:
			
				
