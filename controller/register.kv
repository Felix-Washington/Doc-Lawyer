<Label>:
	size_hint: .2, .5

<RegisterButton@Button>:
	font_size: 16
	size_hint: .3, .1

<RegisterTextInput@TextInput>:
	size_hint: None, None
	multiline: False
	
	on_focus:
		print(self.parent)
		root.parent.parent.parent.parent.testa(self)

<Register>:
	name: 'Register'

	
	#Image:
		#source: 'docs.jpg'
		#allow_stretch: True
		#keep_ratio: True

	FloatLayout:
		size: root.width, root.height
		Image:
			source: 'docs.jpg'
			#allow_stretch: True
			keep_ratio: True
	
		GridLayout:
			id:grid_test
			
			size_hint: .5, .5
			pos_hint:{'center_x': 0.5, 'center_y': 0.5}		

			cols: 1
			Label:
				id:empty_input_message
				text: 'Registro:'
				size_hint: .1, .1
				background_color: 1,0,0,1
				
			BoxLayout:
				orientation: 'vertical'
				cols: 1
					
				RegisterTextInput:
					id:name
					text: str(root)
					
						
				RegisterTextInput:
					id:last_name
					text:'Último Nome'
					size: root.ids.grid_test.width, 50
						
				RegisterTextInput:
					id:user_name
					text:'Nome de Usuário'
					size: root.ids.grid_test.width, 50
					
				RegisterTextInput:
					id:email
					text:'Email'
					size: root.ids.grid_test.width, 50
					
				RegisterTextInput:
					id:pass
					text:'Senha'
					size: root.ids.grid_test.width, 50
					
				RegisterTextInput:
					id:confirm_pass
					text:'Confirme a Senha'
					size: root.ids.grid_test.width, 50
					
			RegisterButton:
				text:'Registrar'
				on_press:
					root.add_user()
					
			RegisterButton:
				text:'Voltar'
				on_press:
					root.manager.current = 'Login'
				