#:set tab_config_content_size 1280, 910
#:set widget_config_size 300, 100

<TabConfigs>:
	canvas:
		Rectangle:
			source: 'imgs/configs_icon.png'
			size: 40, 40
			pos: self.pos

	FloatLayout:	
		size_hint: None, None
		size: tab_config_content_size
		pos: root.pos
		
		canvas.before:
			Color:
				rgba: 0, 1, .7, 1
			Rectangle:
				pos: self.pos
				size:self.size
		
		
		TextInputBox:
			id: text_input_box
			pos: 500 - widget_config_size[0], 600
			size: self.minimum_size
			

			
			UserDataTextInput:
			UserDataTextInput:
			UserDataTextInput:
				text_validate_unfocus:False
			UserDataTextInput:
			UserDataTextInput:
			UserDataTextInput:		
			
		
		GridLayout:
			orientation:'lr-tb'
			size_hint:None,None
			cols: 3
			pos: 100, 300
			size: self.minimum_size
			
			canvas.before:
				Color:
					rgba: 0, .3, .7, 1
				Rectangle:
					pos: self.pos
					size:self.size

			
			
			BoxConfigs:
				size: self.minimum_size
				
				canvas.before:
					Color:
						rgba: 1, .3, .7, 1
					Rectangle:
						pos: self.pos
						size:self.size

				LabelConfigs:
					id:label_font
					text: 'Fonte: '	
					font_size: s1.value					
				LabelConfigs:
					text: 'Scatter: '
					font_size: s1.value
				LabelConfigs:
					text: 'Fonte: '
					font_size: s1.value
			
			
			BoxConfigs:
				size: self.minimum_size			
				Slider:
					id: s1
					size_hint: None, None
					size: widget_config_size
					range: 10, 50
					step: 1
					#value: root.config_values['Font Size']
					on_touch_move:
						root.update_to_user('Font Size',self.value)

				Switch:
					id:switch_scatter
					size_hint: None, None
					size: widget_config_size
					on_touch_down:
						root.update_to_user('Scatter', self.active)
						
				Widget:
					size_hint: None, None
					size: widget_config_size
			
			# Label number BoxConfigs
			BoxConfigs:
				size: self.minimum_size
			
				LabelConfigs:
					id: input_font
					size: 40, 100
					text: '{}'.format(int(s1.value))
		
				LabelConfigs:
					size: 40, 100
				LabelConfigs:
					

		Button:
			size_hint: None, None
			size: 200, 100
			text: 'Configuracao Padrao'
			on_press:
				root.create_popup_save()


<LabelConfigs@Label>:
	size_hint: None, None
	width: 200
	#size: 40, 100
	on_touch_down:
		#print(self.parent)
	
<BoxConfigs@BoxLayout>:
	size_hint: None, None
	orientation: 'vertical'
	on_touch_down:
		#print("size", self.size, "pos", self.pos)

					
<ConfirmConfigs>:
	size_hint: None, None
	size: 100, 40
	#pos: root.pos[0] + root.width - self.width, root.pos[1] + root.height + 5	

	BoxLayout:
		pos: root.pos
		Button:
			text:'Sim'
			on_press:
				root.save_changes(True)
		
		Button:
			text:'Nao'			
			on_press:
				root.save_changes(False)
				
				
				
<UserDataTextInput@TextInput>:
	size_hint: None, None
	size: 300, 50
	multiline: False
	on_focus:
		#print(root)
		#self.parent.get_data(self, self.parent.pos[1] + self.parent.spacing + self.height)
		self.parent.get_data(self, self.pos[1] - self.parent.pos[1] + self.parent.spacing + self.height)