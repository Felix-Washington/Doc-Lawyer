<LoginButton@Button>:
	font_size: 16
	size_hint: .3, .1

<LoginTextInput@TextInput>:
	size_hint: .2, .1
	multiline: False

	
<Login>:
	name:'Login'

	
	RelativeLayout:
		size: root.width, root.height
		
		Image:
			source: 'tit.png'
			allow_stretch: True
			keep_ratio: True
		
		Label:
			id:wrong_input
			text: ''
			size_hint: .2, .1
			font_size: 30
			italic: True
			color: 1,0,0,1
			pos_hint: {'x': .4, 'y': .8}
		
		LoginTextInput:
			id:input_login
			text: 'Digite o login'
			pos_hint: {'x': .4, 'y': .7}
			
			on_focus:
				root.login_desclick(1)
				
		LoginTextInput:
			id:input_password
			text: 'Digite a senha'
			pos_hint: {'x': .4, 'y': .6}

			on_focus:
				root.login_desclick(2)
			
		BoxLayout:
			cols: 2

			size_hint: .8, .5
			pos_hint: {'x': .1, 'y': .4}
			
			LoginButton:
				text: 'Prosseguir'
					
				on_press:
					root.submit_login(input_login.text, input_password.text)
					
				
			LoginButton:
				text: 'Limpar'
				
				on_press:
					root.focus: False
					root.clean()
					
	
		Button:
			id:register_button
			text: 'Cadastre-se'
			size_hint: .8, .1
			pos_hint: {'x': .1, 'y': .2}
			on_press:
				root.register()
				
			
	
		